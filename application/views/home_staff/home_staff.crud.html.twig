{% extends "layout_main.html.twig" %}

{% block title %}
  {{ page_title }} - {{ constant("APP_NAME") }}
{% endblock %}

{% block css %}
  {{ parent() }}
  {% for file in css_files %}
    <link type="text/css" rel="stylesheet" href="{{ file }}">
  {% endfor %}
{% endblock %}

{% block maincontent %}

  <h1 class="main__title">{{ page_title }}</h1>

  {% if main_page_type == 'pages' %}
    <p>
      <a href="{{ base_url('/staff/send_emails') }}" class="btn btn-primary">
        メールの一斉送信
      </a>
    </p>
  {% elseif main_page_type == 'circles' %}
    <p>参加登録の提出が完了している企画のみ表示されます</p>
  {% endif %}

  {{ output | raw }}

{% endblock %}

{% block javascript %}
  {{ parent() }}
  {% for file in js_files %}
    <script src="{{ file }}"></script>
  {% endfor %}
  <script>
    $('#crudFilterTableName').attr( 'value', '{{ main_page_type }}' );
  </script>
{% endblock %}
