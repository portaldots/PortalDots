root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.js]
indent_size = 2

[*.vue]
indent_size = 2

[*.scss]
indent_size = 2

[*.{yml,yaml}]
indent_size = 2

[*.twig]
indent_size = 2

[docker-compose.yml]
indent_size = 4
